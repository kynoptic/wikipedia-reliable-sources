{
  "name": "Standard Project Template",
  "description": "Project template with Status/Value/Effort fields, semantic colors, and standard views",
  "customFields": [
    {
      "name": "Status",
      "dataType": "SINGLE_SELECT",
      "options": [
        {
          "name": "Backlog",
          "color": "GRAY",
          "description": "Not yet prioritized or ready to start"
        },
        {
          "name": "Todo",
          "color": "GREEN",
          "description": "Ready to start, requirements clear"
        },
        {
          "name": "Doing",
          "color": "BLUE",
          "description": "Currently being worked on"
        },
        {
          "name": "Done",
          "color": "PURPLE",
          "description": "Completed and merged"
        }
      ]
    },
    {
      "name": "Value",
      "dataType": "SINGLE_SELECT",
      "options": [
        {
          "name": "Essential",
          "color": "PURPLE",
          "description": "Critical functionality, must have"
        },
        {
          "name": "Useful",
          "color": "BLUE",
          "description": "Valuable improvement, should have"
        },
        {
          "name": "Nice-to-have",
          "color": "GREEN",
          "description": "Optional enhancement, could have"
        }
      ]
    },
    {
      "name": "Effort",
      "dataType": "SINGLE_SELECT",
      "options": [
        {
          "name": "Heavy",
          "color": "RED",
          "description": "Complex task, significant work"
        },
        {
          "name": "Moderate",
          "color": "YELLOW",
          "description": "Standard task, some complexity"
        },
        {
          "name": "Light",
          "color": "GRAY",
          "description": "Quick task, minimal complexity"
        }
      ]
    }
  ],
  "views": [
    {
      "name": "Status",
      "layout": "BOARD_LAYOUT",
      "groupBy": "Status",
      "description": "Primary workflow view grouped by Status"
    },
    {
      "name": "Table",
      "layout": "TABLE_LAYOUT",
      "description": "Detailed planning view showing all fields"
    },
    {
      "name": "Value",
      "layout": "BOARD_LAYOUT",
      "groupBy": "Value",
      "description": "Prioritization view grouped by Value"
    },
    {
      "name": "Effort",
      "layout": "BOARD_LAYOUT",
      "groupBy": "Effort",
      "description": "Capacity planning view grouped by Effort"
    }
  ],
  "automations": [
    {
      "name": "Auto-add sub-issues to project",
      "description": "Automatically add sub-issues when created"
    },
    {
      "name": "Auto-close issue",
      "description": "Close issue when linked PR is merged"
    },
    {
      "name": "Item closed",
      "description": "Set Status to Done when item is closed"
    },
    {
      "name": "Pull request merged",
      "description": "Set Status to Done when PR is merged"
    }
  ],
  "labels": [
    {
      "name": "bug",
      "color": "FF3B30",
      "description": "Something isn't working",
      "category": "critical"
    },
    {
      "name": "security",
      "color": "FF9500",
      "description": "Security-related issues",
      "category": "critical"
    },
    {
      "name": "performance",
      "color": "FF6B35",
      "description": "Performance improvements",
      "category": "critical"
    },
    {
      "name": "testing",
      "color": "34C759",
      "description": "Test suite and infrastructure",
      "category": "quality"
    },
    {
      "name": "refactor",
      "color": "AF52DE",
      "description": "Code refactoring",
      "category": "refinement"
    },
    {
      "name": "ci",
      "color": "00C7BE",
      "description": "Continuous integration and automation",
      "category": "infrastructure"
    },
    {
      "name": "dependencies",
      "color": "007AFF",
      "description": "Dependency updates",
      "category": "infrastructure"
    },
    {
      "name": "config",
      "color": "C7C7CC",
      "description": "Configuration files and management",
      "category": "neutral"
    },
    {
      "name": "docs",
      "color": "8E8E93",
      "description": "Documentation improvements",
      "category": "neutral"
    }
  ],
  "colorPhilosophy": {
    "critical": "Red-Orange spectrum (FF3B30, FF9500, FF6B35) - Urgency and priority",
    "quality": "Green spectrum (34C759, 30D158) - Success and quality indicators",
    "refinement": "Purple spectrum (AF52DE, 5856D6) - Code improvement and cleanup",
    "infrastructure": "Blue-Cyan spectrum (00C7BE, 007AFF) - Technical components",
    "neutral": "Gray spectrum (C7C7CC, 8E8E93, 48484A) - Routine work and configuration"
  }
}
